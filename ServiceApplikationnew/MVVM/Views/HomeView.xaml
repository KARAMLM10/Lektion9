<UserControl x:Class="ServiceApplikationnew.MVVM.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ServiceApplikationnew.MVVM.Views"
             xmlns:viewmodels="clr-namespace:ServiceApplikationnew.MVVM.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:HomeViewModel}"
             mc:Ignorable="d" 
             Height="720" Width="1280">
    <Grid>
        <Rectangle Fill="#000000" Opacity="0.82"/>

        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--Header section-->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                
                <!--Weather section-->
                    
                
                
                <!--DateTime section-->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding CurrentTime, FallbackValue = --:-- }" FontSize="40" Margin="0 25 0 0" Padding="0" Foreground="#f5f5f5" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    <TextBlock Text="{Binding CurrentDate}" FontSize="15" Foreground="#cccccc" HorizontalAlignment="Center"/>
                </StackPanel>
                
                <!--Settings button section-->
                <Button Grid.Column="2" Command="{Binding NavigatToSettingsCommand}" Style="{StaticResource SettingsButton}"/>



            </Grid>
            <!--DeviceItem Section-->
            <Grid Grid.Row="1">
                
            </Grid>
        </Grid>
        
        
    </Grid>
</UserControl>
